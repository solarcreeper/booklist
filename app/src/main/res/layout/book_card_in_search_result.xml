<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_in_search"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="4dp"
    android:layout_marginLeft="6dp"
    android:layout_marginRight="6dp"
    card_view:cardCornerRadius="2dp"
    card_view:cardElevation="2dp"
    card_view:cardPreventCornerOverlap="false">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp">

        <ImageView
            android:id="@+id/card_book_image_in_search_list"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="16dp" />

        <TextView
            android:id="@+id/title_in_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toStartOf="@id/card_book_image_in_search_list"
            android:gravity="start"
            android:textColor="@color/text_primary_on_dark"
            android:textSize="20sp"
            android:visibility="visible" />

        <TextView
            android:id="@+id/subtext_in_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/title_in_list"
            android:layout_marginTop="8dp"
            android:layout_toStartOf="@id/card_book_image_in_search_list"
            android:gravity="start"
            android:textColor="@color/text_secondary_on_dark"
            android:textSize="14sp"
            android:visibility="visible" />

    </RelativeLayout>
</android.support.v7.widget.CardView>